<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CheckListNotes.Pages.OptionsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:c="clr-namespace:CheckListNotes.PageModels.Converters">

    <!--#region Resources-->
    <ContentPage.Resources>
        <ResourceDictionary>
            <c:InverseBoolConverter x:Key="InverseBool" />
            <c:StringToBoolConverter x:Key="StringToBool" />
            <c:StringToColorConverter x:Key="StringToColor" />
            <c:SelectedItemEventArgsToSelectedItemConverter x:Key="SelectedItemToCommandParameter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <!--#endregion-->

    <ContentPage.Content>
        <Grid BackgroundColor="{Binding PageBackgroundColor, Converter={x:StaticResource StringToColor}}" RowSpacing="0">
            <!--#region Rows-->
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!--#endregion-->

            <!--#region Header-->
            <Grid BackgroundColor="{Binding TitleBackgroundColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}">
                <!--#region Columns-->
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <!--#endregion-->

                <Button
                    BackgroundColor="{Binding ButtonBackgroundColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}"
                    Command="{Binding GoBack}"
                    Text="Back"
                    TextColor="{Binding ButtonFontColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}" />
                <Label
                    Grid.Column="1"
                    Margin="0,10"
                    HorizontalOptions="FillAndExpand"
                    HorizontalTextAlignment="Center"
                    LineBreakMode="TailTruncation"
                    Text="{Binding PageTitle}"
                    TextColor="{Binding TitleFontColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}" />
            </Grid>
            <!--#endregion-->

            <!--#region Body-->
            <ScrollView Grid.Row="1">
                <StackLayout Padding="10">
                    <Picker
                        Title="Tema"
                        BackgroundColor="{Binding EditorBackgroundColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}"
                        ItemsSource="{Binding Themes}"
                        SelectedItem="{Binding ThemeSelected}"
                        TextColor="{Binding EditiorFontColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}"
                        TitleColor="{Binding LavelFontColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}" />
                    <BoxView
                        HeightRequest="1"
                        HorizontalOptions="FillAndExpand"
                        Opacity="0.2"
                        Color="{Binding ViewBoxColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}" />

                    <Picker
                        Title="Idioma"
                        BackgroundColor="{Binding EditorBackgroundColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}"
                        ItemsSource="{Binding Languages}"
                        SelectedItem="{Binding Language}"
                        TextColor="{Binding EditiorFontColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}"
                        TitleColor="{Binding LavelFontColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}" />
                    <BoxView
                        HeightRequest="1"
                        HorizontalOptions="FillAndExpand"
                        Opacity="0.2"
                        Color="{Binding ViewBoxColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}" />

                    <Picker
                        Title="Tipo de notificación"
                        BackgroundColor="{Binding EditorBackgroundColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}"
                        ItemsSource="{Binding NotificationTypes}"
                        SelectedItem="{Binding NotificationType}"
                        TextColor="{Binding EditiorFontColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}"
                        TitleColor="{Binding LavelFontColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}" />
                    <BoxView
                        HeightRequest="1"
                        HorizontalOptions="FillAndExpand"
                        Opacity="0.2"
                        Color="{Binding ViewBoxColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}" />

                    <Picker
                        Title="Sonido de notificación"
                        BackgroundColor="{Binding EditorBackgroundColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}"
                        ItemsSource="{Binding NotificationSounds}"
                        SelectedItem="{Binding NotificationSound}"
                        TextColor="{Binding EditiorFontColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}"
                        TitleColor="{Binding LavelFontColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}" />
                    <BoxView
                        HeightRequest="1"
                        HorizontalOptions="FillAndExpand"
                        Opacity="0.2"
                        Color="{Binding ViewBoxColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}" />

                    <Picker
                        Title="Sonido de toques"
                        BackgroundColor="{Binding EditorBackgroundColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}"
                        ItemsSource="{Binding TouchSounds}"
                        SelectedItem="{Binding TouchSound}"
                        TextColor="{Binding EditiorFontColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}"
                        TitleColor="{Binding LavelFontColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}" />
                    <BoxView
                        HeightRequest="1"
                        HorizontalOptions="FillAndExpand"
                        Opacity="0.2"
                        Color="{Binding ViewBoxColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}" />

                    <Picker
                        Title="Color de tarea atrasada"
                        BackgroundColor="{Binding EditorBackgroundColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}"
                        ItemsSource="{Binding LateTaskColors}"
                        SelectedItem="{Binding LateTaskColor}"
                        TextColor="{Binding EditiorFontColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}"
                        TitleColor="{Binding LavelFontColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}" />
                    <BoxView
                        HeightRequest="1"
                        HorizontalOptions="FillAndExpand"
                        Opacity="0.2"
                        Color="{Binding ViewBoxColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}" />

                    <Picker
                        Title="Color de tarea urgente"
                        BackgroundColor="{Binding EditorBackgroundColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}"
                        ItemsSource="{Binding UrgentTaskColors}"
                        SelectedItem="{Binding UrgentTaskColor}"
                        TextColor="{Binding EditiorFontColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}"
                        TitleColor="{Binding LavelFontColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}" />
                    <BoxView
                        HeightRequest="1"
                        HorizontalOptions="FillAndExpand"
                        Opacity="0.2"
                        Color="{Binding ViewBoxColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}" />

                    <Picker
                        Title="Color de tarea completada a tiempo"
                        BackgroundColor="{Binding EditorBackgroundColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}"
                        ItemsSource="{Binding CompletedTaskColors}"
                        SelectedItem="{Binding CompletedTaskColor}"
                        TextColor="{Binding EditiorFontColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}"
                        TitleColor="{Binding LavelFontColor, Converter={x:StaticResource StringToColor}, Mode=OneWay}" />
                </StackLayout>
            </ScrollView>
            <!--#endregion-->
        </Grid>
    </ContentPage.Content>
</ContentPage>