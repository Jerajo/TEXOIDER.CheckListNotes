<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="CheckListNotes.Pages.OptionsPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:c="clr-namespace:CheckListNotes.PageModels.Converters">

    <!--#region Resources-->
    <ContentPage.Resources>
        <ResourceDictionary>
            <c:InverseBoolConverter x:Key="InverseBool" />
            <c:StringToBoolConverter x:Key="StringToBool" />
            <c:SelectedItemEventArgsToSelectedItemConverter x:Key="SelectedItemToCommandParameter" />
        </ResourceDictionary>
    </ContentPage.Resources>
    <!--#endregion-->

    <Grid BackgroundColor="#333" RowSpacing="0">
        <!--#region Rows-->
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <!--#endregion-->

        <!--#region Header-->
        <Grid BackgroundColor="#555">
            <!--#region Columns-->
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <!--#endregion-->

            <Button Command="{Binding GoBack}" Text="Back" />
            <Label
                Grid.Column="1"
                Margin="0,10"
                HorizontalOptions="FillAndExpand"
                HorizontalTextAlignment="Center"
                LineBreakMode="TailTruncation"
                Text="{Binding PageTitle}"
                TextColor="White" />
        </Grid>
        <!--#endregion-->

        <!--#region Body-->
        <ScrollView Grid.Row="1">
            <StackLayout Padding="10" BindingContext="{Binding AppSettings}">
                <Label Text="Tema" TextColor="White" />
                <Picker
                    ItemsSource="{Binding Themes}"
                    SelectedItem="{Binding Theme}"
                    TextColor="White" />
                <BoxView
                    HeightRequest="1"
                    HorizontalOptions="FillAndExpand"
                    Opacity="0.2"
                    Color="Gray" />

                <Label Text="Idioma" TextColor="White" />
                <Picker
                    ItemsSource="{Binding Languages}"
                    SelectedItem="{Binding Language}"
                    TextColor="White" />
                <BoxView
                    HeightRequest="1"
                    HorizontalOptions="FillAndExpand"
                    Opacity="0.2"
                    Color="Gray" />

                <Label Text="Tamaño de funtes" TextColor="White" />
                <Picker
                    ItemsSource="{Binding FontSizes}"
                    SelectedItem="{Binding FontSize}"
                    TextColor="White" />
                <BoxView
                    HeightRequest="1"
                    HorizontalOptions="FillAndExpand"
                    Opacity="0.2"
                    Color="Gray" />

                <Label Text="Tipo de notificación" TextColor="White" />
                <Picker
                    ItemsSource="{Binding NotificationTypes}"
                    SelectedItem="{Binding NotificationType}"
                    TextColor="White" />
                <BoxView
                    HeightRequest="1"
                    HorizontalOptions="FillAndExpand"
                    Opacity="0.2"
                    Color="Gray" />

                <Label Text="Sonido de notificación" TextColor="White" />
                <Picker
                    ItemsSource="{Binding NotificationSounds}"
                    SelectedItem="{Binding NotificationSound}"
                    TextColor="White" />
                <BoxView
                    HeightRequest="1"
                    HorizontalOptions="FillAndExpand"
                    Opacity="0.2"
                    Color="Gray" />

                <Label Text="Sonido de toques" TextColor="White" />
                <Picker
                    ItemsSource="{Binding TouchSounds}"
                    SelectedItem="{Binding TouchSound}"
                    TextColor="White" />
                <BoxView
                    HeightRequest="1"
                    HorizontalOptions="FillAndExpand"
                    Opacity="0.2"
                    Color="Gray" />

                <Label Text="Color de tarea urgente" TextColor="White" />
                <Picker
                    ItemsSource="{Binding UrgentTaskColors}"
                    SelectedItem="{Binding UrgentTaskColor}"
                    TextColor="White" />
                <BoxView
                    HeightRequest="1"
                    HorizontalOptions="FillAndExpand"
                    Opacity="0.2"
                    Color="Gray" />

                <Label Text="Color de tarea atrasada" TextColor="White" />
                <Picker
                    ItemsSource="{Binding LateTaskColors}"
                    SelectedItem="{Binding LateTaskColor}"
                    TextColor="White" />
                <BoxView
                    HeightRequest="1"
                    HorizontalOptions="FillAndExpand"
                    Opacity="0.2"
                    Color="Gray" />

                <Label Text="Color de tarea completada a tiempo" TextColor="White" />
                <Picker
                    ItemsSource="{Binding CompletedTaskColors}"
                    SelectedItem="{Binding CompletedTaskColor}"
                    TextColor="White" />
            </StackLayout>
        </ScrollView>
        <!--#endregion-->
    </Grid>

</ContentPage>